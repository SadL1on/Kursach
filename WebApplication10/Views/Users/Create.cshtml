@model Zero.ViewModels.CreateUserViewModel
@{
    Layout = null;
    ViewBag.Title = "Добавление пользователя";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <!-- Bootstrap CSS -->
    <link href="~/css/yourstyle.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <title>Создание пользователя</title>
</head>
<body style="background-color: #cceae0;">
    <div class="container" style="background-color: white;margin-top: 60px;width: 100%;height: max-content;padding-bottom: 20px;">
        @{ await Html.RenderPartialAsync("_GetNavBar");}
        <h1 style="color: #419d7f; text-decoration: underline;">Добавить нового пользователя</h1>
        <div class="row" style="margin-top: 40px;margin-left: 37px;">
            <div class="col">
                <form asp-action="Create" asp-controller="Users">
                    <div class="form-group">
                        <label for="usr">Email:</label>
                        <input asp-for="Email" type="email"  class="form-control" id="usr">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Пароль:</label>
                        <input asp-for="Password"  min="5" type="password" class="form-control" id="pwd">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button class="btn btn-outline-success btn-block" type="submit">Добавить</button>
                </form>
            </div>
        </div>
    </div>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>